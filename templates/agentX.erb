<%
# First, the master case
if !has_variable?('agentx_ping_interval') then
    if @enable then
-%>
master agentx
<%  end -%>
<%
# Now, the sub-agents
else
-%>
agentXPingInterval <%= @agentx_ping_interval %>
<% end -%>
